import "tfplan"

allowed_machine_types = [
	"Standard_D1_v2",
	"Standard_D1_V2",
	"Standard_D2_v2",
	"Standard_D2_V2",
	"Standard_DS1_v2",
	"Standard_DS1_V2",
	"Standard_DS2_v2",
	"Standard_DS2_V2",
	"Standard_A1",
	"Standard_A2",
	"Standard_D1",
	"Standard_D2",
]

main = rule {
	all tfplan.resources.azurerm_virtual_machine as _, instances {
		all instances as _, r {
			r.applied.vmsize in allowed_machine_types
		}
	}
}
